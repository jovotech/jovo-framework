{
  "compilerOptions": {
    "lib": [ "es2017" ],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist/",
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.d.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}
