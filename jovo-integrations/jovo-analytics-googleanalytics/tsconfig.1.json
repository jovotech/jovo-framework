{
    "compilerOptions": {
      "lib": [ "es2017" ],
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "declaration": true,
      "strict": true,
      "outDir": "./dist/",
      "target": "es2017",
      "sourceMap": true,
      "plugins": [
        { "name": "typescript-tslint-plugin" }
      ]
    },
    "include": [
      "**/*.d.ts",
      "src/**/*",
      "test/**/*"
    ],
    "exclude": [
      "dist/**/*",
      "./node_modules/**/*",
      "node_modules/*",
      "**/*.spec.ts"
    ]
  }